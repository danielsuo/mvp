#app.loading #panel
  opacity 0.33
  pointer-events none  

#panel
  position absolute
  height 100%
  width panelWidth
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between
  color #6C668B
  transition opacity 0.33s ease-out
  font-feature-settings 'liga' 0
  -webkit-font-feature-settings 'liga' 0
  -moz-font-feature-settings 'liga' 0
  
  h3
    font-size 0.875em


#actions 
  display flex
  flex-grow 1
  width 200%
  transform translateX(0)
  transition transform 0.5s ease
  user-select none
  
  &.show-benching
    transform translateX(-33.33%)
  &.show-editor
    transform translateX(-50%)

  section
    width 50%
    box-sizing border-box
    display flex
    flex-direction column
    
    h3
      margin 0
      padding 1rem 1rem 1rem 1rem
      font-weight normal
      text-transform uppercase
      letter-spacing 0.2em
      font-size 0.875em
      text-align center

    >div 
      flex-grow 1

    ul
      list-style none
      margin 0 1rem
      padding 0
      background-color #fbfbff
      border 1px solid rgba(0,0,8,0.1)
      border-radius 2px
      box-shadow 0 1px 6px rgba(0,0,8,0.05)
      
    li
      padding 1rem
      margin 0
      box-sizing border-box
      background-color rgba(250,250,255,0.25)
      border-bottom 1px solid rgba(0,0,8,0.1)
      border-top 1px solid #fff
      line-height 1.35rem
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease
      &:hover, &.active
        background-color #fff
        color #7270b1
      &.active
        font-family "Apercu Bold", "Helvetica Neue", Helvetica, sans-serif
        font-weight bold
      &:last-of-type
        border-width 0
        
    button
      font-family "Apercu Bold", "Helvetica Neue", Helvetica, sans-serif
      margin 1rem
      padding 1rem
      border none
      border-radius 3px
      border 1px solid rgba(0,0,8,0.1)
      outline none
      font-size 1em
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease
      &.next
        background-color #7270b1
        color #fbfbff
        &:hover
          background-color #8782CF
          
      &.back
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background #fbfbff
        color #933E44
        &:hover
          background-color #fff
          color #EC5C4E
          
      &.model
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background #fbfbff
        color #42586C
        margin-bottom 0px
        &:hover
          background-color #fff
          color #4F90CD

          
      &.share
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background #fbfbff
        color #20671E
        &:hover
          background-color #fff
          color #59B55C
  
      &:disabled
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background-color transparent !important
        cursor default
        color #827CA3 !important
          
#editor
  backface-visibility hidden
  > div
    display flex
    flex-direction column
    span
      Apercu()
      text-align center
      margin auto
      
  &.has-selection
    .has-selection
      display block
    .no-selection
      display none

  &.no-selection
    .has-selection
      display none
    .no-selection
      display block
      
#loading
  position absolute
  width 4rem
  height 4rem
  top calc(50% - 2rem)
  left calc(40% - 2rem)
  background-image url('../img/loading.svg')
  background-size contain
  background-repeat no-repeat
  opacity 0
  transition opacity 0.33s ease
  pointer-events none
  backface-visibility hidden
  &.spin
    animation spin 1s infinite linear

#app.loading #loading
  opacity 0.4



@keyframes spin
  from transform rotate(0deg)
  to   transform rotate(360deg)