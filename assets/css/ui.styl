#app.loading #panel
  opacity 0.33
  pointer-events none  

#panel
  position absolute
  height 100%
  width panelWidth
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between
  color #6C668B
  transition opacity 0.33s ease-out
  font-feature-settings 'liga' 0
  -webkit-font-feature-settings 'liga' 0
  -moz-font-feature-settings 'liga' 0
  
  h3
    font-size 0.875em


#actions 
  display flex
  flex-grow 1
  width 200%
  transform translateX(0)
  transition transform 0.5s ease
  user-select none
  
  &.show-benching
    transform translateX(-33.33%)
  &.show-editor
    transform translateX(-50%)

  section
    width 50%
    box-sizing border-box
    display flex
    flex-direction column
    
    h3
      margin 0
      padding 1rem 1rem 1rem 1rem
      font-weight normal
      text-transform uppercase
      letter-spacing 0.2em
      font-size 0.875em
      text-align center

    >div 
      flex-grow 1

    ul
      list-style none
      margin 0 1rem
      padding 0
      border 1px solid rgba(0,0,8,0.1)
      border-radius 2px
      box-shadow 0 1px 6px rgba(0,0,8,0.05)
      
    li
      padding 1rem
      margin 0
      box-sizing border-box
      background-color #fbfbff
      border-bottom 1px solid rgba(0,0,8,0.1)
      border-top 1px solid #fff
      line-height 1.35rem
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease
      &:hover, &.active
        background-color #fff
        color #7270b1
      &.active
        font-family "Apercu Bold", "Helvetica Neue", Helvetica, sans-serif
        font-weight bold
      &:last-of-type
        border-width 0
        
    button
      ApercuLight()
      margin 1rem
      padding 1rem
      border none
      border-radius 2px
      border 1px solid rgba(0,0,8,0.1)
      outline none
      font-size 1em
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease
      &.next
        ApercuBold()
        background-color #7270b1
        color #fbfbff
        &:hover
          background-color #8782CF
          
      &.back
        background #fbfbff
        color #933E44
        &:hover
          background-color #fff
          color #EC5C4E
          
      &.deselect
        margin-top 0.5rem
        background #fbfbff
        color #7270B1
        margin-bottom 0px
        &:hover
          background-color #fff
          color #514AAE
          
      &.model
        background #fbfbff
        color #42586C
        margin-bottom 0px
        &:hover
          background-color #fff
          color #4F90CD

          
      &.share
        background #fbfbff
        color #20671E
        &:hover
          background-color #fff
          color #59B55C
  
      &:disabled
        ApercuLight()
        background-color transparent !important
        cursor default
        color #827CA3 !important
          
#editor
  > div
    display flex
    flex-direction column

  h3, button.deselect
    transition opacity 0.15s ease
  
  ul
    backface-visibility hidden
    position relative
    transition box-shadow 0.15s ease
    span
      backface-visibility hidden
      Apercu()
      text-align center
      position absolute
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)
  
  li
    backface-visibility hidden
    transition opacity 0.15s ease
              
  &.has-selection
    ul span
      opacity 0
      transition opacity 0.15s ease

  &.no-selection
    h3  
      opacity 0
    ul
      background transparent
      box-shadow 0 1px 6px rgba(0,0,8,0)
      pointer-events none
      span
        transition opacity 0.15s ease 0.15s
    li
      opacity 0
    button.deselect
      pointer-events none
      opacity 0



      
#loading
  position absolute
  width 4rem
  height 4rem
  top calc(50% - 2rem)
  left calc(40% - 2rem)
  background-image url('../img/loading.svg')
  background-size contain
  background-repeat no-repeat
  opacity 0
  transition opacity 0.33s ease
  pointer-events none
  backface-visibility hidden
  &.spin
    animation spin 1s infinite linear

#app.loading #loading
  opacity 0.4



@keyframes spin
  from transform rotate(0deg)
  to   transform rotate(360deg)