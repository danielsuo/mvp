#protofit aside
    order 2
    color #6C668B
    width 25%

#project-title
  ApercuLight()
  h3
    font-size 1.05em
    padding-bottom 0.5rem
    opacity 0.8

#project-address
  ApercuLight()
  opacity .45

#powered-by
  padding 1rem
  text-align center
  transform translateX(-50%)
  
  .uppercase
    ApercuLight()
    text-transform uppercase
    letter-spacing 0.2em
    font-size 0.825em
    opacity .25

  .logotype
    ApercuBold()
    letter-spacing -0.02em
    font-size 1.1em
    opacity .20
    
#project-north
  position absolute
  bottom -1rem
  right -0.9rem
  width 5rem
  height 5rem
  opacity 0.5

  div
    absolute100()
    background-image url('../img/north-arrow.svg')
    background-repeat no-repeat
  
  span
    position absolute
    top 50%
    left 50%
    transform translateX(-55%) translateY(-50%)
    ApercuLight()
    font-size 0.75em