@import url('./svg.select.css');
@import mixins

panelWidth = 20%
appWidth = 100% - panelWidth

body
  margin 0
  font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
  font-smoothing antialiased
  text-rendering optimizeLegibility

#app
  height 100%
  background-color #EFEFF6

#protofit
  position absolute
  width calc(80% - 12px)
  height calc(100% - 24px)
  margin 12px 12px 12px 0
  right 0
  box-sizing border-box
  background #fbfbff
  box-shadow 0 1px 6px rgba(0,0,8,0.05)
  border 1px solid rgba(0,0,8,0.1)    
  

  // svg 
  //   path, line, shape 
  //     stroke #000000
  .cell
    stroke #ffffff
    fill rgba(113, 111, 176, 0.1)

#panel
  position absolute
  height 100%
  width panelWidth
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between
  color #827CA3
  -webkit-font-feature-settings "liga" 0

#actions 
  display flex
  flex-grow 1
  width 300%
  transform translateX(0)
  transition transform 0.5s ease
  
  &.show-benching
    transform translateX(-33.33%)
  &.show-editor
    transform translateX(-66.66%)

  section
    width 33.33%
    box-sizing border-box
    display flex
    flex-direction column
    
    h3
      margin 0
      padding 1.5rem 1rem 1rem 1rem
      font-weight normal
      text-transform uppercase
      letter-spacing 0.2em
      font-size 0.9em
      text-align center

    >div 
      flex-grow 1

    ul
      list-style none
      margin 0.5rem 1rem
      padding 0
      background-color #fbfbff
      border 1px solid rgba(0,0,8,0.1)
      border-radius 2px
      box-shadow 0 1px 6px rgba(0,0,8,0.05)
      
    li
      padding 1rem
      margin 0
      box-sizing border-box
      background-color rgba(250,250,255,0.25)
      border-bottom 1px solid rgba(0,0,8,0.1)
      border-top 1px solid #fff
      line-height 1.35rem
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease
      &:hover, &.active
        background-color #fff
        color #7270b1
      &.active
        font-family "Apercu Bold", "Helvetica Neue", Helvetica, sans-serif
        font-weight bold
      &:last-of-type
        border-width 0
        
    hr
      width 100%
      border-top 1px dotted rgba(0,0,8,0.1)
      
    span
      text-align center
      transform translateY(50%)
        
    button
      font-family "Apercu Bold", "Helvetica Neue", Helvetica, sans-serif
      margin 1rem
      padding 1rem
      border none
      border-radius 3px
      border 1px solid rgba(0,0,8,0.1)
      outline none
      font-size 1em
      cursor pointer
      transition background-color 0.15s ease, color 0.15s ease
      &.next
        background-color #7270b1
        color #fbfbff
        &:hover
          background-color #8782CF
          
      &.back
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background #fbfbff
        color #933E44
        &:hover
          background-color #fff
          color #EC5C4E
          
      &.share
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background #fbfbff
        color #20671E
        &:hover
          background-color #fff
          color #59B55C

          
      &:disabled
        font-family "Apercu Light", "Helvetica Neue", Helvetica, sans-serif
        background-color transparent !important
        cursor default
        color #827CA3 !important
          


#editor
  &.has-selection
    .has-selection
      display block
    .no-selection
      display none
  &.no-selection
    .has-selection
      display none
    .no-selection
      display block
    
#info
  background-color rgba(0,0,8,0.1)
  
