#app.three-d
  #svg-container
    display none
  #project-north
    display none


#protofit
  position absolute
  display flex
  width calc(80% - 1rem)
  height calc(100% - 2rem)
  margin 1rem 1rem 1rem 0
  right 0
  box-sizing border-box
  background #fbfbff
  box-shadow 0 1px 6px rgba(0,0,8,0.05)
  border 1px solid rgba(0,0,8,0.1)
  overflow hidden
  user-select none
    
  iframe
    width 100%
    height 100%
    border none
    
  .plan-layer
    pointer-events none
    
  &.dragging .cell
    transition fill 0.15s ease

  .cell
    stroke #ffffff
    transition fill 0.4s ease

    &[data-layer="0"] //benching
      fill #EFEEF3
      &.selected
        fill #C0C0C0
        
    &[data-layer="1"] //breakout
      fill #EFF5EF
      &.selected
        fill #B6D1B6
      
    &[data-layer="2"] //conference
      fill #EFF2FE
      &.selected
        fill #BECAE5
      
    &[data-layer="3"] //office
      fill #F9F8F5
      &.selected
        fill #E8D9A4
                
    &[data-layer="4"] //empty
      fill #F6F6F6
      &.selected
        fill #C6C6C6
        
    &[data-layer="5"] //pantry / reception
      fill #FCF3F6
      &.selected
        fill #DAC2CA

#svg-container
  width 100%
  height 100%
  box-sizing border-box 
  padding 2rem
  opacity 1
  transition opacity 0.66s ease 0.2s
  > svg 
      filter drop-shadow(0px 2px 16px rgba(0, 0, 0, 0.066))
      -webkit-filter drop-shadow(0px 2px 16px rgba(0, 0, 0, 0.066))
      backface-visibility hidden


#app.loading #svg-container
  opacity 0

#project-north
  position absolute
  bottom 1rem
  right calc(20% + 1.5rem)
  width 2.5rem
  height 2.5rem
  opacity 0.5
  transition opacity 1s ease, transform 1.66s ease-out

  div
    absolute100()
    background-image url('../img/north-arrow.svg')
    background-size contain
    background-repeat no-repeat
    transition transform 2s ease-out
  
  span
    position absolute
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    ApercuRegular()
    font-size 0.8em
    
#app.loading #project-north
  opacity 0
  transition opacity 1s ease, transform 1.66s ease-out
  transform scale(0.5, 0.5)

  div 
    transform rotate(810deg) !important
    transition transform 2s ease-out
