#home
  background darkGrey
  padding-bottom 3rem
  box-sizing border-box
  height 100%
  color purple60 
  position relative
  overflow hidden
  width 100%
  height 100%
  display flex
  align-items center
  justify-content space-between

  .bg
    absolute100()
    width 200%
    background url('../img/plan-pattern.svg')
    animation moveBg 240s linear infinite
  
  #hero
    position relative
    color purple25
    background lightGrey
    margin auto
    min-width 400px
    
    h1, h3
      color purple45
      text-align center
    h1
      letter-spacing -0.01em
      font-size 4em
      FranklinMedium()
      margin-bottom 0
    h3
      opacity 0.5
      margin-top .5rem
      margin-bottom 1rem
      
  #login
    box-sizing border-box
    padding 0 2rem
    label 
      FranklinLight()
      font-size 0.875rem
      text-transform uppercase
      letter-spacing 0.1rem
    input
      border none
      border-bottom 1px solid purple70
      background transparent
      outline none
      color purple45
      border-radius 0
      font-size 1.5rem
      height 2.5rem
      box-shadow none
      padding 1rem 0
      transition all 0.15s ease
      &:hover, &:active
        background #fff
        color purple60
        border-bottom 1px solid purple45
      &:active, &:focus
        background #fff
        color purple60
        outline none
    button
      width 100%
      margin 2rem 0
      position initial
      opacity 1
        
    
@keyframes moveBg
  0%
    transform translateX(0)
  100%
    transform translateX(-50%)