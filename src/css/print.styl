@media print

  #app
    background transparent

  #panel
    display none
    
  #protofit
    width 100%
    height 100%
    background transparent
    margin 0
    border none
    -webkit-print-color-adjust: exact
    border 1px solid rgba(0,0,8,0.15)
    aside
      width 15%
      font-size 0.55em
      line-height 1
    .cell
      pointer-events none

  #info
    padding 0 1em
    table
      width 100%
      line-height 1rem
      tr
        margin-top .1rem
        
  #project-address, #project-logo
    opacity 1
  
  #protofit aside
    border-left 1px solid rgba(0,0,8,0.15)
    button
      display none
  
  #editor-done-btn
    display none

  hr
    border-color rgba(0,0,8,0.15)
    
  #svg-wrap
    display flex
    flex-direction column
    justify-content center
    
  #svg
    width calc(100% - 2rem)
    height auto
    position inline
    top 1rem
    left 1rem
    transform none
  
  #rsf input
    border none
    font-size 1.1em
  
