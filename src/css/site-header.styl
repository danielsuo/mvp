#site-header
  position fixed
  top 0
  left 0
  background #fafaff
  width 100%
  box-shadow 0 1px 1px rgba(0,0,10,0.05)
  z-index 1
  display flex
  justify-content space-between

  .logo
    height 2rem
    width 2rem
    background-image url('../img/floored-logo.svg')
    background-size contain
    background-position center center
    background-repeat no-repeat
    margin 0.5rem
    

  .login
    padding 0.25rem 0.5rem
    margin 0.5rem
    user-select none
    