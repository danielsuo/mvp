panelWidth = 20%
appWidth = 100% - panelWidth  

html, body
  width 100%
  height 100%

html
  font-size 100%

body
  margin 0
  font-size 16px
  ApercuLight()
  font-smoothing antialiased
  text-rendering optimizeLegibility

#app
  height 100%
  background-color #EFEFF6

h1, h2
  ApercuBold()
  letter-spacing -0.035em
  
h3, h4
  ApercuLight()
  margin 0
  padding 1rem
  font-weight normal
  text-transform uppercase
  letter-spacing 0.2em
  text-align center
  
hr
  width 100%
  border none
  border-top 1px dotted rgba(0,0,8,0.1)
  margin 0